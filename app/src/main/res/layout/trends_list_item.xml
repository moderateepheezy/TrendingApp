<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="3dp"
    android:id="@+id/post_content_holder"
    android:background="#efeeee"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="2dp"
        app:contentPadding="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <org.trends.trendingapp.customviews.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Texting"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/tweet_name"/>

            <com.roughike.swipeselector.SwipeSelector
                android:id="@+id/swipeSelector"
                android:layout_width="match_parent"
                app:swipe_customFontPath="fonts/roboto_bold.ttf"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <org.trends.trendingapp.customviews.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_alignParentStart="true"
                    android:textSize="12sp"
                    android:text="2000 volumes"
                    android:id="@+id/tweet_volume"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="5dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/tw__composer_logo_blue"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#0a7b9b"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#edecec"/>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:background="#fff"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/upvote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:button="@drawable/checkbox_selector_thumb_up" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/upCount"
                            android:text="0"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_gravity="center"/>

                        <CheckBox
                            android:id="@+id/downVote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:button="@drawable/checkbox_selector_thumb_down" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/downCount"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:text="0"
                            android:layout_gravity="center"/>

                    </LinearLayout>


                    <ImageButton
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/share_small"  />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>