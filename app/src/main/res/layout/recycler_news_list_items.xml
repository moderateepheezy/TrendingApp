<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/post_content_holder"
    android:background="#c4c2c2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="2dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lst"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:background="?attr/selectableItemBackground">

                <org.trends.trendingapp.customviews.RobotoTextView
                    android:id="@+id/event_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:text="date start"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:layout_margin="5dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/rlv_name_view"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/tw_logo"
                            android:background="#bab4b4"/>
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/sourceImg"/>
                            <org.trends.trendingapp.customviews.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:id="@+id/sourceName"
                                android:text="Source Name"
                                android:textColor="@color/colorAccent"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <org.trends.trendingapp.customviews.RobotoTextView
                            android:id="@+id/event_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:ellipsize="end"
                            android:text="event name"
                            android:maxLines="2"
                            app:foundFont="@integer/font_roboto_bold"
                            android:textColor="#0a7b9b"
                            />

                        <org.trends.trendingapp.customviews.RobotoTextView
                            android:id="@+id/event_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:lines="3"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="#606161"
                            />


                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#0a7b9b"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#edecec"/>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:background="#fff"
                    android:layout_height="wrap_content" >
                    <Button
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@null"
                        android:text="SHARE"
                        android:drawablePadding="5dp"
                        android:textColor="@color/black"
                        android:drawableRight="@android:drawable/ic_menu_share"
                        android:gravity="right|center_vertical" />

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>