<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    app:cardCornerRadius="2dp"
    app:contentPadding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="org.trends.trendingapp.activities.FeedBackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:id="@+id/sourceName"
            android:text="Rate app look and feel"
            android:textColor="@color/colorAccent"
            android:textSize="18dp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:numStars="5"
            android:rating="3"
            android:stepSize="0.5"
            style="@style/RatingBar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Comments on Look and feel"
            android:textColor="@color/colorAccent"
            android:textSize="18dp" />

        <EditText
            android:layout_width="match_parent"
            android:background="@color/grey"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:lines="4"
            android:textSize="16dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:id="@+id/apperance"
            android:text="Rate App performance"
            android:textColor="@color/colorAccent"
            android:textSize="18dp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:numStars="5"
            android:rating="3"
            android:stepSize="0.5"
            style="@style/RatingBar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Comments on performance"
            android:textColor="@color/colorAccent"
            android:textSize="18dp" />

        <EditText
            android:layout_width="match_parent"
            android:background="@color/grey"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:textSize="16dp"/>

    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sites Suggestion Request"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/sugesst_box"
                android:layout_width="match_parent"
                android:background="@color/grey"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:textSize="16dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Suggest"
                android:textColor="@color/white"
                android:background="@color/colorAccent"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
